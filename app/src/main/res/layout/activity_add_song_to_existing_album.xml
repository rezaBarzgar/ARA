<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a.ara.AddSongToExistingAlbum">
    
    <EditText
        android:id="@+id/et_add_album_title_2"
        android:hint="title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_add_album_genre_2"
        android:hint="genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_add_album_duration"
        android:hint="duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <Button
        android:text="submit"
        android:id="@+id/btn_submit_existing_album"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/list_existing_albums"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
